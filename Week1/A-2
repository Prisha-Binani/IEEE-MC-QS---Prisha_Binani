#include <iostream>
using namespace std;

int maxSubArray(int nums[], int size) {
    int current = nums[0];
    int best = nums[0];
    for (int i = 1; i < size; i++) {
        if (current < 0) current = nums[i];
        else current += nums[i];
        if (current > best) best = current;
    }
    return best;
}

int main() {
    int nums[] = {-2, 1, -3, 4, -1, 2, 1, -5, 4};
    int size = sizeof(nums) / sizeof(nums[0]);
    cout << maxSubArray(nums, size);
}
